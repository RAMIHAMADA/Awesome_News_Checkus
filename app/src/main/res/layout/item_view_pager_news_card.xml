<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_view_pager"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/picture_iv"
        android:layout_width="0dp"
        app:shapeAppearanceOverlay="@style/roundImageView"
        android:layout_height="191dp"
        app:layout_constraintEnd_toEndOf="@id/item_card_view_pager"
        app:layout_constraintStart_toStartOf="@id/item_card_view_pager"
        app:layout_constraintTop_toTopOf="@id/item_card_view_pager"
        tools:src="@drawable/ic_news_download"/>

    <TextView
        android:id="@+id/title_news_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/primary_title"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/item_card_view_pager"
        app:layout_constraintStart_toStartOf="@id/item_card_view_pager"
        app:layout_constraintTop_toBottomOf="@id/picture_iv"
        tools:text="Заголовок новости будет тут " />

    <TextView
        android:id="@+id/date_news_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/grey_date"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@id/item_card_view_pager"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/item_card_view_pager"
        app:layout_constraintTop_toBottomOf="@id/title_news_tv"
        tools:text="01.02.2023" />

</androidx.constraintlayout.widget.ConstraintLayout>