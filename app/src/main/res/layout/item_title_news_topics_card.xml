<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/title_of_topic_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/greyForFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <TextView
        android:id="@+id/title_item_news_topics_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/title_of_topic_view"
        app:layout_constraintEnd_toEndOf="@id/title_of_topic_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/title_of_topic_view"
        app:layout_constraintTop_toTopOf="@id/title_of_topic_view"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Тема новости" />

    <TextView
        android:id="@+id/all_news_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/all_news"
        android:textSize="14dp"
        android:textColor="@color/grey_date"
        app:layout_constraintBottom_toBottomOf="@id/title_of_topic_view"
        app:layout_constraintEnd_toStartOf="@id/arrow_navigate_next_iv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/title_item_news_topics_tv"
        app:layout_constraintTop_toTopOf="@id/title_of_topic_view" />

    <ImageView
        android:id="@+id/arrow_navigate_next_iv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:background="@color/greyForFragment"
        android:src="@drawable/ic_arrow_navigate_next"
        app:layout_constraintBottom_toBottomOf="@id/title_of_topic_view"
        app:layout_constraintEnd_toEndOf="@id/title_of_topic_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/title_of_topic_view"
        app:layout_constraintTop_toTopOf="@id/title_of_topic_view" />

    <View
        android:id="@+id/background_for_arrow_v"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/arrow_navigate_next_iv"
        app:layout_constraintEnd_toEndOf="@id/arrow_navigate_next_iv"
        app:layout_constraintStart_toStartOf="@id/arrow_navigate_next_iv"
        app:layout_constraintTop_toTopOf="@id/arrow_navigate_next_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>